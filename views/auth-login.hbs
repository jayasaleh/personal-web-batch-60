{{#> layout currentPage='Login'}}
<style>
.login-container {
      max-width: 400px;
      width: 100%;
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
      margin: 50px auto;
    }

    .login-title {
      font-weight: bold;
      font-size: 26px;
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .form-control {
      background-color: #F8F9FA;
      border: 1px solid #CED4DA;
      font-size: 16px;
      padding: 12px;
      border-radius: 8px;
      transition: 0.3s;
    }

    .form-control:focus {
      border-color: #007BFF;
      box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.3);
    }

    .btn-login {
      width: 100%;
      background-color:orangered !important;
      color: white;
      padding: 12px;
      font-size: 18px;
      font-weight: bold;
      border-radius: 6px;
      border: none;
      transition: 0.3s;
    }

    .btn-login:hover {
      background-color:rgb(208, 56, 1) !important;
    }

    .register-text {
      text-align: center;
      margin-top: 15px;
      font-size: 16px;
    }

    .register-text a {
      color:black;
      font-weight: bold;
      text-decoration: none;
    }

    .register-text a:hover {
      color:orangered;
      text-decoration: underline;
    }

    .input-group-text {
      background-color: #F8F9FA;
      border-right: none;
    }

    .form-control {
      border-left: none;
    }
  </style>
<div class="container">
  <div class="login-container">
    <h2 class="login-title">Login</h2>
    <form action="/login" method="post">
      
      <!-- Email -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
          <input type="text" id="email" name="email" class="form-control" placeholder="Enter your email">
        </div>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password">
        </div>
      </div>

      <!-- Alert Messages -->
      {{#if messages.success}}
      <div class="alert alert-success text-center" role="alert">
        {{messages.success}}
      </div>
      {{/if}}

      {{#if messages.error}}
      <div class="alert alert-danger text-center" role="alert">
        {{messages.error}}
      </div>
      {{/if}}

      <!-- Login Button -->
      <button type="submit" class="btn-login">Log In</button>

      <!-- Register Link -->
      <p class="register-text">
        Don't have an account? <a href="/register">Sign Up</a>
      </p>

    </form>
  </div>
</div>
    <script src="/js/my-project.js"></script>
{{/layout}}