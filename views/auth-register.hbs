{{#> layout currentPage='Register'}}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
 <style>
    /* login dan register */
    .register-container {
      max-width: 450px;
      width: 100%;
      background: white;
      padding: 20px !important;
      border-radius: 12px;
      box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
      margin: 30px auto !important;
    }

    .register-title {
      font-weight: bold;
      font-size: 26px;
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .form-control {
      background-color: #f8f9fa;
      border: 1px solid #ced4da;
      font-size: 16px;
      padding: 12px;
      border-radius: 8px;
      transition: 0.3s;
    }

    .form-control:focus {
      border-color: orange !important;
      box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.3);
    }

    .btn-register {
      width: 100%;
      background-color: orangered !important;
      color: white;
      padding: 12px;
      font-size: 18px;
      font-weight: bold;
      border-radius: 6px;
      border: none;
      transition: 0.3s;
    }

    .btn-register:hover {
      background-color: rgb(189, 50, 0) !important;
    }

    .login-text {
      text-align: center;
      margin-top: 15px;
      font-size: 16px;
    }

    .login-text a {
      color: black !important;
      font-weight: bold;
      text-decoration: none;
    }

    .login-text a:hover {
      color: orangered !important;
      text-decoration: underline;
    }
</style>
</head>
<body>

<div class="container">
  <div class="register-container">
    <h2 class="register-title">Register</h2>
    <form action="/register" method="post">
      
      <!-- Name -->
      <div class="mb-3">
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name">
      </div>

      <!-- Email -->
      <div class="mb-3">
        <input type="text" id="email" name="email" class="form-control" placeholder="Enter your email">
      </div>

      <!-- Password -->
      <div class="mb-3">
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password">
      </div>

      <!-- Confirm Password -->
      <div class="mb-3">
        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Re-enter your password">
      </div>

      <!-- Error Message -->
      {{#if messages.error}}
      <div class="alert alert-danger text-center" role="alert">
        {{messages.error}}
      </div>
      {{/if}}

      <!-- Register Button -->
      <button type="submit" class="btn-register">Register</button>

      <!-- Login Link -->
      <p class="login-text">
        Already have an account? <a href="/login">Log In</a>
      </p>

    </form>
  </div>
</div>


    <script src="/js/my-project.js"></script>
{{/layout}}